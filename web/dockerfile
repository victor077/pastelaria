FROM node:22-bookworm AS builder

WORKDIR /app

COPY package.json package-lock.json ./ 

RUN npm install

COPY . .

RUN npm run build

FROM nginx:stable-alpine

WORKDIR /usr/share/nginx/html

RUN rm -rf ./*

COPY --from=builder /app/web/dist .

# Expondo a porta 3000
EXPOSE 3000  

CMD ["nginx", "-g", "daemon off;"]